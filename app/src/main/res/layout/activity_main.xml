<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c5175"
    android:backgroundTint="#4c5175"
    tools:context=".controller.MainActivity">

    <!-- <android.support.design.widget.TextInputLayout>


    </android.support.design.widget.TextInputLayout>-->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="362dp"
        android:layout_height="185dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_shape"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4c5175"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/mdpField"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_shape"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4c5175"
        app:layout_constraintEnd_toEndOf="@+id/emailField"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/emailField"
        app:layout_constraintTop_toBottomOf="@+id/emailField" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="184dp"
        android:layout_height="40dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_shape_capsule"
        android:text="Sign in"
        app:layout_constraintEnd_toEndOf="@+id/mdpField"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/mdpField"
        app:layout_constraintTop_toBottomOf="@+id/mdpField" />

    <TextView
        android:id="@+id/btnReset"
        android:layout_width="162dp"
        android:layout_height="29dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="36dp"
        android:linksClickable="true"
        android:text="Forgotten password?"
        android:textColor="#96eacc"
        android:textColorLink="#96eacc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect" />

    <TextView
        android:id="@+id/btnInscrire"
        android:layout_width="139dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="Sign up"
        android:textColor="#96eacc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/btnInscrire"
        app:layout_constraintHorizontal_bias="0.701"
        app:layout_constraintStart_toStartOf="@+id/btnReset"
        app:layout_constraintTop_toBottomOf="@+id/btnReset" />


</androidx.constraintlayout.widget.ConstraintLayout>