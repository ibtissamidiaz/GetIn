<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4c5175"
    android:backgroundTint="#4c5175"
    tools:context=".controller.MainActivity">

    <!-- <android.support.design.widget.TextInputLayout>


    </android.support.design.widget.TextInputLayout>-->


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="362dp"
        android:layout_height="185dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/emailField"
        android:layout_width="268dp"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_shape"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4c5175"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <Button
        android:id="@+id/btnReset"
        android:layout_width="263dp"
        android:layout_height="61dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/btn_shape_capsule"
        android:text="Reinitialiser le mot de passe"
        app:layout_constraintEnd_toEndOf="@+id/emailField"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/emailField"
        app:layout_constraintTop_toBottomOf="@+id/emailField" />





</androidx.constraintlayout.widget.ConstraintLayout>